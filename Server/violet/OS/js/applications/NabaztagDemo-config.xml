<settings><list>

	<item><map>
		<key>"lang"</key>
		<type>"Popup"</type>
		<datatype>"text"</datatype>
		<required>true</required>
		<default_value>""</default_value>
		<label><map>
			<!-- Dico key in the form : app/<appName>/settings/<key> -->
			<fr><![CDATA["Langue"]]></fr>
			<en><![CDATA["Lang"]]></en>
			<it><![CDATA[""]]></it>
			<es><![CDATA[""]]></es>
