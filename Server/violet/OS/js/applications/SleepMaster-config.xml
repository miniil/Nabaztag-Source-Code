			<es><![CDATA["${object.name} !"]]></es>
			<de><![CDATA["${object.name} !"]]></de>
			<pt><![CDATA["${object.name} !"]]></pt>
			<ja><![CDATA["${object.name} !"]]></ja>
		</map></item>
		<item><map>
