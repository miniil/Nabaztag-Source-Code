			<it><![CDATA["${object.name} !"]]></it>
			<es><![CDATA["${object.name} !"]]></es>
			<de><![CDATA["${object.name} !"]]></de>
			<pt><![CDATA["${object.name} !"]]></pt>
			<ja><![CDATA["${object.name} !"]]></ja>
		</map></item>
		<item><map>
			<key>"cannotSleep"</key><!-- feedback for an object that do not sleep -->
			<fr><![CDATA["${object.name} ne peut pas s'endormir !"]]></fr>
			<en><![CDATA["${object.name} cannot sleep !"]]></en>
			<it><![CDATA["${object.name} !"]]></it>
			<es><![CDATA["${object.name} !"]]></es>
			<de><![CDATA["${object.name} !"]]></de>
			<pt><![CDATA["${object.name} !"]]></pt>
			<ja><![CDATA["${object.name} !"]]></ja>
		</map></item>
		<item><map>
			<key>"onWakeUp"</key><!-- what nabaztag says when he wakes up -->
			<fr><![CDATA["Waaouu.. Ca alors ! J'ai dormi longtemps ??"]]></fr>
			<en><![CDATA["Waaouuu..??? I'm alive !!"]]></en>
			<it><![CDATA["${object.name} !"]]></it>
			<es><![CDATA["${object.name} !"]]></es>
			<de><![CDATA["${object.name} !"]]></de>
			<pt><![CDATA["${object.name} !"]]></pt>
			<ja><![CDATA["${object.name} !"]]></ja>
		</map></item>

	</list></dico>

	<files><list>
		<!-- <entry name="media/audio/intro" fileName="intro.m3" /> -->
	</list></files>
</map></resources>

